<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lokal_nazwa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwa lokalu"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_lokal_adres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adres lokalu"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_lokal_godziny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Godziny otwarcia"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/img_map"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/mapa"
            android:contentDescription="@string/map_description"/>
    </LinearLayout>
</ScrollView>
